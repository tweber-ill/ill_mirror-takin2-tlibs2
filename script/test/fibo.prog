func int fibo(int n)
{
	if n <= 2 then
		ret 1;
	else
		ret fibo(n-1) + fibo(n-2);
}


func int fac(int n)
{
	if n <= 1 then
		ret 1;

	ret n*fac(n-1);
}


func start()
{
	loop 1==1 do
	{
		int n = getint("n = ");

		putstr(n + "! = " + fac(n));
		putstr("fib(" + n + ") = " + fibo(n));
	}
}
